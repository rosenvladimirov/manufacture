<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_bom_form_loss_view" model="ir.ui.view">
        <field name="name">mrp.bom.loss.form</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr='//tree/field[@name="product_qty"]' position="after">
                <field name="type"/>
                <field name="loss"/>
                <field name="product_qty_real"/>
            </xpath>
            <xpath expr='//tree/field[@name="product_id"]' position="before">
                <field name="use_master"/>
                <field name="block_fallow"/>
            </xpath>
        </field>
    </record>
    <record id="mrp_bom_line_loss_view_form" model="ir.ui.view">
        <field name="name">mrp.bom.line.loss.view.form</field>
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp.mrp_bom_line_view_form"/>
        <field name="arch" type="xml">
            <xpath expr='//div[@class="o_row"]' position="after">
                <label for="loss" string="Discount Qty"/>
                <div class="o_row">
                    <field name="type"/>
                    <field name="loss"/>
                    <field name="product_qty_real" readonly="1"/>
                </div>
            </xpath>
        </field>
    </record>
    <record id="mrp_bom_component_loss_tree_view" model="ir.ui.view">
        <field name="name">mrp.bom.component.loss.tree</field>
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp.mrp_bom_component_tree_view"/>
        <field name="arch" type="xml">
            <field name="product_id" position="before">
                <field name="use_master"/>
                <field name="block_fallow"/>
            </field>
            <field name="product_qty" position="after">
                <field name="type"/>
                <field name="loss"/>
                <field name="product_qty_real"/>
            </field>
        </field>
    </record>
</odoo>
