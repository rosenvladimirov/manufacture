<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_production_workcenter_form_view_inherit">
        <field name="name">mrp.production.work.order.form</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workcenter_form_view_inherit"/>
        <field name="arch" type="xml">
            <!--
            <xpath expr="//field[@name='active_move_line_ids']/tree/field[@name='lot_id']" position="attributes">
                <attribute name="domain">[('product_id', '=', product_id), ('id', 'in', )]</attribute>
            </xpath>
            <xpath expr="//field[@name='final_lot_id']" position="after">
                <field name="final_component" readonly="1"/>
            </xpath>
            -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_wizard_view_stock_picking_add_product"
                        type="object"
                        string="Add product"
                        class="oe_stat_button"
                        icon="fa fa-rocket"
                        context="{'default_workorder_id': active_id}"
                        attrs="{'invisible': ['|', '|', '|', ('is_produced', '=', True), ('working_state', '=', 'blocked'), ('state', '!=', 'progress'), ('is_user_working', '=', False)]}"/>
            </xpath>
            <xpath expr="//notebook/page[2]" position="after">
                <page string="Finished produced lots" attrs="{'invisible': [('finished_move_line_ids', '=', [])]}">
                    <field name="finished_move_line_ids" attrs="{'readonly': True, 'invisible': [('finished_move_line_ids', '=', [])]}">
                        <tree>
                            <field name="product_id" invisible="1"/>
                            <field name="lot_id" groups="stock.group_production_lot" domain="[('product_id', '=', product_id)]" context="{'default_product_id': product_id}" attrs="{'invisible': [('lots_visible', '=', False)]}"/>
                            <field name="product_uom_id" groups="product.group_uom"/>
                            <field name="qty_done"/>
                            <field name="lots_visible" invisible="1"/>
                        </tree>
                    </field>
                </page>
                <!--
                <page string="Holded lots">
                    <field name="split_lot_ids" readonly="1">
                        <tree>
                            <field name="product_id"/>
                            <field name="lot_id"/>
                        </tree>
                    </field>
                </page>
                -->
            </xpath>
        </field>
    </record>
</odoo>